@model AnaBellaApp.Web.Models.Store.ProductViewModel

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-9">
                    <h1 class="text-dark">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-3 text-end">
                    <h1 class="text-warning">@((Model.Price).ToString("c"))</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageURL" style="border-radius: 35px;" width="100%" height="387px" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12" style="min-height:350px">
                                    <span class="text-success">
                                        @* @Model.CategoryId *@
                                        @ViewBag.Category
                                    </span>
                                    <h2 class="text-success"></h2>
                                    <p class="text-secondary">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>                            
                            <div class="row pl-3">
                                <div class="col-2" style="padding-right:0px">
                                    Quantidade
                                </div>
                                <div class="col-10" style="width:100px; padding-left:0px">
                                    <input asp-for="Count" class="form-control"/>                                
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </<div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">
                        Voltar para lista
                    </a>
                </div>

                <div class="col-12 col-md-6">
                    <button type="submit" class="btn-primary form-control btn-lg"  style="height:50px;">
                        Adicionar ao carrinho</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
